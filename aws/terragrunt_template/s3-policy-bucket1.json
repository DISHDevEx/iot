{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "EnforcedTLS",
            "Effect": "Deny",
            "Principal": "*",
            "Action": "s3:*",
            "Resource": [
                "arn:aws:s3:::iot-tg-test-bucket1",
                "arn:aws:s3:::iot-tg-test-bucket1/*"
            ],
            "Condition": {
                "Bool": {
                    "aws:SecureTransport": "false"
                }
            }
        },
        {
            "Sid": "RootAccess",
            "Effect": "Allow",
            "Principal": {
                "AWS": "arn:aws:iam::064047601590:root"
            },
            "Action": "s3:*",
            "Resource": [
                "arn:aws:s3:::iot-tg-test-bucket1",
                "arn:aws:s3:::iot-tg-test-bucket1/*"
            ]
        }
    ]
}